    # Infrastructure Environment Variables
# Docker & Database Configuration

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=vehicle_auction

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@vehicleauction.com
PGADMIN_DEFAULT_PASSWORD=admin123

# Redis Configuration
REDIS_PASSWORD=redis_password

# Nginx Configuration
NGINX_PORT=80
NGINX_SSL_PORT=443

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/vehicleauction.crt
SSL_KEY_PATH=/etc/ssl/private/vehicleauction.key

# Network Configuration
NETWORK_NAME=vehicle_auction_network

# Volume Configuration
POSTGRES_DATA_PATH=./data/postgres
REDIS_DATA_PATH=./data/redis
NGINX_LOGS_PATH=./logs/nginx

# Environment
ENVIRONMENT=development