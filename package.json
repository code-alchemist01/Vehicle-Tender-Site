{
  "name": "vehicle-auction-platform",
  "version": "1.0.0",
  "description": "Enterprise-level vehicle auction web platform with microservices architecture",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "turbo run db:migrate",
    "db:generate": "turbo run db:generate",
    "db:seed": "turbo run db:seed",
    "start:frontend": "pnpm --filter frontend dev",
    "start:backend": "pnpm --filter api-gateway dev & pnpm --filter auth-service dev & pnpm --filter vehicle-service dev & pnpm --filter auction-service dev & pnpm --filter bid-service dev & pnpm --filter payment-service dev & pnpm --filter notification-service dev"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.12.0"
  }
}