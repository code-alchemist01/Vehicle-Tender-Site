# Payment Service Environment Variables
NODE_ENV=development
PORT=4005
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/payment_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_API_VERSION=2023-10-16

# PayTR Configuration (Turkish Payment Gateway)
PAYTR_MERCHANT_ID=your-paytr-merchant-id
PAYTR_MERCHANT_KEY=your-paytr-merchant-key
PAYTR_MERCHANT_SALT=your-paytr-merchant-salt
PAYTR_SUCCESS_URL=http://localhost:3000/payment/success
PAYTR_FAIL_URL=http://localhost:3000/payment/fail

# Payment Configuration
PAYMENT_TIMEOUT_MINUTES=30
REFUND_TIMEOUT_DAYS=7
COMMISSION_PERCENTAGE=5

# Security
PAYMENT_ENCRYPTION_KEY=your-payment-encryption-key
WEBHOOK_SIGNATURE_SECRET=your-webhook-signature-secret

# External Services
AUCTION_SERVICE_URL=http://localhost:4003
NOTIFICATION_SERVICE_URL=http://localhost:4006

# Logging
LOG_LEVEL=info
PAYMENT_LOG_LEVEL=debug