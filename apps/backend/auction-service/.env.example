# Auction Service Environment Variables
NODE_ENV=development
PORT=4003
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/auction_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Auction Configuration
MIN_BID_INCREMENT=100
MAX_AUCTION_DURATION_DAYS=30
AUTO_EXTEND_MINUTES=5
AUCTION_END_BUFFER_SECONDS=30

# WebSocket Configuration
WEBSOCKET_PORT=4003
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# Scheduler Configuration
AUCTION_CHECK_INTERVAL_SECONDS=30
CLEANUP_EXPIRED_AUCTIONS_HOURS=24

# Notification Configuration
NOTIFICATION_SERVICE_URL=http://localhost:4006

# External Services
VEHICLE_SERVICE_URL=http://localhost:4002
BID_SERVICE_URL=http://localhost:4004

# Logging
LOG_LEVEL=info