# Notification Service Environment Variables
NODE_ENV=development
PORT=4006
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/notification_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@vehicleauction.com
FROM_NAME=Vehicle Auction Platform

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notification Configuration (Firebase)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Notification Queue Configuration
NOTIFICATION_QUEUE_NAME=notifications
NOTIFICATION_PROCESSING_CONCURRENCY=10
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY_MS=5000

# Template Configuration
EMAIL_TEMPLATE_PATH=./templates/email
SMS_TEMPLATE_PATH=./templates/sms

# Rate Limiting
EMAIL_RATE_LIMIT_PER_HOUR=100
SMS_RATE_LIMIT_PER_HOUR=50
PUSH_RATE_LIMIT_PER_HOUR=200

# Logging
LOG_LEVEL=info