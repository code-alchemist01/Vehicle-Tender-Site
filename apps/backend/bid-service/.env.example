# Bid Service Environment Variables
NODE_ENV=development
PORT=4004
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/bid_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Bid Processing Configuration
BID_QUEUE_NAME=bid-processing
BID_PROCESSING_CONCURRENCY=5
BID_RETRY_ATTEMPTS=3
BID_RETRY_DELAY_MS=1000

# Bid Validation
MIN_BID_AMOUNT=1
MAX_BID_AMOUNT=10000000
BID_INCREMENT_PERCENTAGE=5

# Rate Limiting
BID_RATE_LIMIT_WINDOW_MS=60000
BID_RATE_LIMIT_MAX_BIDS=10

# External Services
AUCTION_SERVICE_URL=http://localhost:4003
PAYMENT_SERVICE_URL=http://localhost:4005
NOTIFICATION_SERVICE_URL=http://localhost:4006

# Anti-Fraud Configuration
MAX_BIDS_PER_USER_PER_AUCTION=50
SUSPICIOUS_BID_THRESHOLD=100000

# Logging
LOG_LEVEL=info