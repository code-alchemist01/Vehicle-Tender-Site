# Database
DATABASE_URL="postgresql://username:password@localhost:5432/vehicle_auction_auth?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"
JWT_EXPIRES_IN="15m"
