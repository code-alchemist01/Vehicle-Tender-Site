# Vehicle Service Environment Variables
NODE_ENV=development
PORT=4002
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/vehicle_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp
UPLOAD_PATH=./uploads/vehicles

# Cloudinary Configuration (for production)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Image Processing
IMAGE_QUALITY=80
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=200

# External APIs
VIN_DECODER_API_KEY=your-vin-decoder-api-key
VIN_DECODER_URL=https://api.vindecoder.eu/3.2

# Logging
LOG_LEVEL=info